                        <div id="scrap-grid" class="grid grid-cols-2 md:grid-cols-3 gap-4">
                            <!-- Cards go here -->
                        </div>
                        <div id="empty-state" class="hidden h-full flex flex-col items-center justify-center text-gray-500 pb-20">
                            <i data-lucide="sparkles" class="w-8 h-8 mb-2 opacity-40"></i>
                            <p class="text-xs font-light tracking-wide">Empty Collection</p>
