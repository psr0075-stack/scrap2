                    <button onclick="event.stopPropagation(); openAddModal()" class="w-9 h-9 rounded-full bg-gray-900 text-white flex items-center justify-center shadow-lg hover:bg-black transition">
                        <i data-lucide="plus" class="w-5 h-5"></i>
                    </button>
                </div>
